<% provide(:title, "Tweets") %>
<div class="center jumbotron">
  <h1>Tweet Banter</h1>
  <h2>Tweets from IGN</h2>



<div id = 'twetdiv'>
		<% @tweets.each do |a| %>
			<div class = 'panel panel-inverse'>
			<div class = 'panel-body' style = 'height:100px; background-color:#3346FF'>
				<p style = "font-family: 'Raleway',ariel; font-size: 19px; font-weight: 500; margin: 1 1 26px;"><%=a %></p>
			</div>
			</div>
		<% end %>
</div>


	<script>

		function loadlink(){
		    $('#twetdiv').load(window.location.href + " #twetdiv");
		}
	loadlink(); 
	setInterval(function(){
	    loadlink() 
	}, 7000);
		
	</script